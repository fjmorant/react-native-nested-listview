{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "jsx": "react-native",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "declaration": true
  },
  "filesGlob": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["build", "node_modules"],
  "compileOnSave": false
}
